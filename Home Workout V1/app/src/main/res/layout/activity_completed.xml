<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="com.home.workout.stretching.CompletedActivity.ClickHandler" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_light_____"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/title_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/splash_screen" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="#73000000" />

                    </FrameLayout>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_cup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:src="@drawable/rp_complete_cup"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/llExercises"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_cup">

                        <com.home.workout.common.view.CBTextView
                            android:id="@+id/tvTotalEx"
                            style="@style/txt_fff_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10" />

                        <com.home.workout.common.view.CMTextView
                            style="@style/txt_fff_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exercises" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCalorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_cup">

                        <com.home.workout.common.view.CBTextView
                            android:id="@+id/tvCalorie"
                            style="@style/txt_fff_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0" />

                        <com.home.workout.common.view.CMTextView
                            style="@style/txt_fff_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calorie" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_35sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_cup">

                        <com.home.workout.common.view.CBTextView
                            android:id="@+id/tvDuration"
                            style="@style/txt_fff_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="00:18" />

                        <com.home.workout.common.view.CMTextView
                            style="@style/txt_fff_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/duration" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btnShare"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/btn_bg_round_gradiant"
                        android:gravity="center"
                        android:onClick="@{(v)->handler.onShareClick()}"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/llCalorie">

                        <com.home.workout.common.view.CBTextView
                            style="@style/txt_fff_18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_share"
                            android:drawablePadding="@dimen/_15sdp"
                            android:drawableTint="@color/white"
                            android:text="@string/share" />

                    </LinearLayout>

                    <com.home.workout.common.view.CBTextView
                        style="@style/txt_fff_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:onClick="@{(v)->handler.onDoItAgainClick()}"
                        android:text="@string/do_it_again"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/btnShare"
                        app:layout_constraintStart_toStartOf="@+id/btnShare"
                        app:layout_constraintTop_toBottomOf="@id/btnShare" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:onClick="@{(v)->handler.onBackClick()}"
                        android:padding="10dp"
                        android:src="@drawable/td_btn_back_w"
                        app:layout_collapseMode="pin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_12sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/rp_ic_reminder_green" />

                            <com.home.workout.common.view.CMTextView
                                style="@style/txt_000_16"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_weight="1"
                                android:text="@string/reminder_colon" />

                            <com.home.workout.common.view.CMTextView
                                android:id="@+id/tvReminders"
                                style="@style/txt_666_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:ellipsize="end"
                                android:maxWidth="@dimen/_80sdp"
                                android:singleLine="true"
                                tools:text="20:00" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:onClick="@{(v)->handler.onAddReminderClick()}"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:src="@drawable/rp_ic_add_green" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_12sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/rp_ic_weight_green" />

                            <com.home.workout.common.view.CMTextView
                                style="@style/txt_000_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:text="@string/weight" />

                            <com.home.workout.common.view.CMEditTextView
                                android:id="@+id/editWeight"
                                style="@style/txt_666_16"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:hint="0.0"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal" />


                            <com.home.workout.common.view.CMTextView
                                android:id="@+id/tvKG"
                                style="@style/txt_fff_16"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="@color/green_text"
                                android:gravity="center"
                                android:onClick="@{(v)->handler.onKGClick()}"
                                android:text="@string/kg" />

                            <com.home.workout.common.view.CMTextView
                                android:id="@+id/tvLB"
                                style="@style/txt_fff_16"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:background="@color/gray_light_"
                                android:gravity="center"
                                android:onClick="@{(v)->handler.onLBClick()}"
                                android:text="@string/lb" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_12sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/rp_ic_bmi_green" />

                                <com.home.workout.common.view.CMTextView
                                    style="@style/txt_000_16"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:text="@string/bmi" />

                                <com.home.workout.common.view.CMTextView
                                    android:id="@+id/tvBMI"
                                    style="@style/txt_666_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    tools:text="26.79kg/m\u00B2" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgEditTopBMI"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:onClick="@{(v)->handler.onEditBMIClick()}"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/rp_ic_edit_green" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgArrowUp"
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:onClick="@{(v)->handler.onArrowUpClick()}"
                                    android:src="@drawable/rp_ic_arrow_up_green"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clBMIGraphView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/_7sdp"
                                android:paddingEnd="@dimen/_7sdp"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:id="@+id/rlBMI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <!-- Bmi Color view -->
                                    <LinearLayout
                                        android:id="@+id/lnyBmiGraph"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:background="@color/white"
                                        android:orientation="horizontal"
                                        android:weightSum="7">

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:layout_weight="0.5"
                                            android:background="@color/colorFirst" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:layout_weight="1.5"
                                            android:background="@color/colorSecond" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:layout_weight="2"
                                            android:background="@color/colorThird" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:background="@color/colorFour" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginEnd="@dimen/_2sdp"
                                            android:layout_weight="1"
                                            android:background="@color/colorFive" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorSix" />

                                    </LinearLayout>

                                    <!-- Bmi Blank view and display bmi percentage -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal"
                                        android:weightSum="7">

                                        <View
                                            android:id="@+id/blankView1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.1">

                                            <com.home.workout.common.view.CTextView
                                                android:id="@+id/txtBmiGrade"
                                                style="@style/txt_000_14"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0.0" />

                                            <View
                                                android:id="@+id/BmiPosition"
                                                android:layout_width="5dp"
                                                android:layout_height="match_parent"
                                                android:layout_below="@+id/txtBmiGrade"
                                                android:layout_centerHorizontal="true"
                                                android:background="@color/black" />
                                        </RelativeLayout>

                                        <View
                                            android:id="@+id/blankView3"
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.0"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                </RelativeLayout>

                                <!-- Bmi bottom text -->
                                <LinearLayout
                                    android:id="@+id/llBmiNumberGraph"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="7"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/rlBMI">

                                    <com.home.workout.common.view.CTextView
                                        style="@style/txt_000_14"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:layout_weight="0.4"
                                        android:text="15" />

                                    <com.home.workout.common.view.CTextView
                                        style="@style/txt_000_14"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:layout_weight="1.3"
                                        android:text="16" />

                                    <com.home.workout.common.view.CTextView
                                        style="@style/txt_000_14"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:layout_weight="2.1"
                                        android:text="18.5" />

                                    <com.home.workout.common.view.CTextView
                                        style="@style/txt_000_14"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:layout_weight="1.1"
                                        android:text="25" />

                                    <com.home.workout.common.view.CTextView
                                        style="@style/txt_000_14"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:layout_weight="1"
                                        android:text="30" />

                                    <com.home.workout.common.view.CTextView
                                        style="@style/txt_000_14"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:layout_weight="0.80"
                                        android:text="35" />

                                    <com.home.workout.common.view.CTextView
                                        style="@style/txt_000_14"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:layout_weight="0.35"
                                        android:text="40" />

                                </LinearLayout>

                                <com.home.workout.common.view.CTextView
                                    android:id="@+id/tvWeightString"
                                    style="@style/txt_green_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:text="demo text"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/llBmiNumberGraph" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_15sdp"
                                    android:onClick="@{(v)->handler.onEditBMIClick()}"
                                    android:src="@drawable/rp_ic_edit_green"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/llBmiNumberGraph" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:id="@+id/llTapInputHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:onClick="@{(v)->handler.onAddHeightClick()}"
                                android:paddingTop="@dimen/_15sdp"
                                android:paddingBottom="@dimen/_25sdp">

                                <com.home.workout.common.view.CTextView
                                    style="@style/txt_green_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/tap_here_to_input_your_height"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/gray_light_"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp"
                                android:visibility="gone">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/rp_icon_google_fit" />

                                <com.home.workout.common.view.CTextView
                                    style="@style/txt_000_16"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:text="@string/sync_to_google_fit" />

                                <Switch
                                    android:id="@+id/switchGoogleFit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <com.home.workout.common.view.CMTextView
                                style="@style/txt_000_20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="end"
                                android:text="@string/i_feel" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp">

                                <com.home.workout.common.view.CTextView
                                    style="@style/txt_999_16"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/easy" />

                                <com.home.workout.common.view.CTextView
                                    style="@style/txt_999_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exhausted" />

                            </LinearLayout>

                            <RadioGroup
                                android:id="@+id/rdgFeel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rdoFeelOne"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
